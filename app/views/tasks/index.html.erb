<div>
  <h1>My Tasks</h1>
</div>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>

    <% end %>
</ul>

<p></p>
<%= link_to "Create a new task", new_task_path %>
